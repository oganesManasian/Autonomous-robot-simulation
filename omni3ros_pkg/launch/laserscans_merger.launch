
<!-- Run nodes related to laserscans: laserscan merger, point cloud to laserscan transformer -->
<launch>


	<!-- Laserscan merger -->
	<node pkg="ira_laser_tools" name="laserscan_multi_merger" type="laserscan_multi_merger" output="screen">
		<param name="destination_frame" value="laser_frame_merged"/>
		<param name="cloud_destination_topic" value="/merged_cloud"/>
		<param name="scan_destination_topic" value="/scan"/>
		<param name="laserscan_topics" value ="/scan_left /scan_right /scan_camera" /> <!-- LIST OF THE LASER SCAN TOPICS TO SUBSCRIBE -->

		<param name="angle_min" value="-3.14159"/>
		<param name="angle_max" value="3.14159"/>
		<param name="angle_increment" value="0.0058"/>
		<param name="scan_time" value="0.0333333"/>
		<!-- Same as in laser.urdf.xacro -->
		<param name="range_min" value="0.0"/> 
		<param name="range_max" value="30.0"/>
	</node>


</launch>
